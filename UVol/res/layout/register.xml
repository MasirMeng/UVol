<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TableLayout android:id="@+id/TableLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TextView android:id="@+id/textTile"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="25dip"
            android:background="@color/blue"/>
        
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/ph1"
        android:layout_gravity="center_horizontal"/>

        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:background="#FFFFFF"
	            >
		    <View
		        android:layout_height="1px"
		        android:layout_width="match_parent"
		        android:background="#ffdad7cf"
		        />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dip"
		        android:orientation="horizontal"
		        android:paddingLeft="30dip"
		        android:background="#FFFFFFFF">
		        <ImageView
		            android:layout_height="30dp"
		            android:layout_width="30dp"
		            android:src="@drawable/account"
		            android:layout_gravity="center_vertical"/>
		        <EditText
		            android:id="@+id/register_Name"
		            android:layout_height="wrap_content"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_marginLeft="12dip"
		            android:textColor="#FF2F2F2F"
		            android:textSize="15sp"
		            android:textColorHint="#FF999898"
		            android:hint="请输入用户名"
		            android:layout_gravity="center_vertical"
		            android:singleLine="true"
		            android:maxLines="1"
		            android:background="@null"/>
		
		    </LinearLayout>
		
		     <View
		        android:layout_height="1px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="30dip"
		        android:layout_marginRight="30dip"
		        android:background="#ffdad7cf"
		        />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dip"
		        android:orientation="horizontal"
		        android:paddingLeft="30dip"
		        android:background="#FFFFFFFF">
		        <ImageView
		            android:layout_height="30dp"
		            android:layout_width="30dp"
		            android:src="@drawable/email"
		            android:layout_gravity="center_vertical"/>
		        <EditText
		            android:id="@+id/register_email"
		            android:layout_height="wrap_content"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_marginLeft="12dip"
		            android:textColor="#FF2F2F2F"
		            android:textSize="15sp"
		            android:textColorHint="#FF999898"
		            android:layout_gravity="center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:maxLines="1"
		            android:hint="请输入邮箱"
		            android:inputType="textEmailAddress" />
		
		    </LinearLayout>
		
		    <View
		        android:layout_height="1px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="30dip"
		        android:layout_marginRight="30dip"
		        android:background="#ffdad7cf"
		        />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dip"
		        android:orientation="horizontal"
		        android:paddingLeft="30dip"
		        android:background="#FFFFFFFF">
		        <ImageView
		            android:layout_height="30dp"
		            android:layout_width="30dp"
		            android:src="@drawable/lock"
		            android:layout_gravity="center_vertical"/>
		        <EditText
		            android:id="@+id/register_pass"
		            android:layout_height="wrap_content"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_marginLeft="12dip"
		            android:textColor="#FF2F2F2F"
		            android:textSize="15sp"
		            android:textColorHint="#FF999898"
		            android:password="true"
		            android:layout_gravity="center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:maxLines="1"
		            android:hint="请输入大于4位的密码"
		            android:inputType="textPassword" />
		
		    </LinearLayout>
		
		    <View
		        android:layout_height="1px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="30dip"
		        android:layout_marginRight="30dip"
		        android:background="#ffdad7cf"
		        />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dip"
		        android:orientation="horizontal"
		        android:paddingLeft="30dip"
		        android:background="#FFFFFFFF">
		        <ImageView
		            android:layout_height="30dp"
		            android:layout_width="30dp"
		            android:src="@drawable/lock"
		            android:layout_gravity="center_vertical"/>
		        <EditText
		            android:id="@+id/register_PassAgain"
		            android:layout_height="wrap_content"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_marginLeft="12dip"
		            android:textColor="#FF2F2F2F"
		            android:textSize="15sp"
		            android:textColorHint="#FF999898"
		            android:password="true"
		            android:layout_gravity="center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:maxLines="1"
		            android:hint="请确认密码"
		            android:inputType="textPassword" />
		
		    </LinearLayout>
		    <View
		        android:layout_height="1px"
		        android:layout_width="match_parent"
		        android:background="#ffdad7cf"
		        android:layout_marginBottom="10dp"
		        />
		</LinearLayout>
	   
	    <Button
	        android:id="@+id/zhuce"
	        android:layout_width="match_parent"
	        android:layout_height="45dip"
	        android:layout_margin="10dp"
	        android:background="@drawable/button_shape2"
	        android:text="注册"
	        android:textColor="@color/white"
	        android:textSize="25dp" />

	    <Button
	        android:id="@+id/cancle"
	        android:layout_width="match_parent"
	        android:layout_height="45dip"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/button_shape3"
	        android:text="取消"
	        android:textColor="@color/red"
	        android:textSize="25dp" />
        
    </TableLayout>


</LinearLayout>