<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_gray"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:background="@drawable/zuzhi_bg">

            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/back2" />

            <ImageView
                android:id="@+id/tx_zuzhi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dip"
                android:src="@drawable/tx"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginBottom="6dip"
                android:text="四川大学志愿服务队"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/id_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gary"
                android:textSize="15sp"
                android:layout_margin="5dip"
                android:text="简介：爱生活，爱志愿"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_pattern"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingTop="4dip"
            android:paddingBottom="4dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="志愿时长"
                    android:textSize="18sp"
                android:textColor="#2ecc71" />
                <TextView
                    android:id="@+id/tv_shichang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="300"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_gary" />
            </LinearLayout>

            <View
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_width="1px"
                android:background="#ffdad7cf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="组织人数"
                    android:textSize="18sp"
                android:textColor="#2ecc71"/>
                <TextView
                    android:id="@+id/tv_renshu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="60"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_gary" />
            </LinearLayout>

            <View
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_width="1px"
                android:background="#ffdad7cf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="组织排名"
                    android:textSize="18sp"
                android:textColor="#2ecc71" />
                <TextView
                    android:id="@+id/tv_paiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="60"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_gary" />
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dip"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_pattern">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="活动列表"
                android:textColor="#2ecc71"
                android:textSize="20sp" />

        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#ffdad7cf" />



        <ListView
            android:id="@+id/list_zuzhiAct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </ListView>

    </LinearLayout>



</LinearLayout>