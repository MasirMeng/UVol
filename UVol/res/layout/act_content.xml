<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_gray">
    
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="250dp">
                
                <ImageView
                    android:id="@+id/v_background"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop" />

                <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/back3" />
                
            </RelativeLayout>
        
    
        <TextView
                android:id="@+id/act_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:textColor="#2ecc71"
                android:background="@drawable/list_pattern" />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />

            <RelativeLayout
                android:id="@+id/enter_zuzhi_detail"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/tv_fabuzhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />
                
                <ImageView
                    android:id="@+id/enter"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/enter" />

            </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/tv_actTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="65dp"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/didian" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/leibie2" />

                <TextView
                    android:id="@+id/tv_leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/tongji_time" />

                <TextView
                    android:id="@+id/tv_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/fuzeren" />

                <TextView
                    android:id="@+id/tv_fuzeren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />
    
                </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/dianhua" />

                <TextView
                    android:id="@+id/tv_dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/enter_content_detail"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="活动详情"
                    android:textColor="#2ecc71"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/enter" />

            </RelativeLayout>
            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="#ffdad7cf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <TextView
                    android:id="@+id/act_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"                    
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/enter_yicanjia"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_pattern">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="已参加志愿者"
                    android:textColor="#2ecc71"
                    android:textSize="18sp" />
                
                <ImageView
                    android:id="@+id/yicanjias"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/enter" />


                <TextView
                    android:id="@+id/act_weicanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/yicanjias"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_color_gary"/>


                <TextView
                    android:id="@+id/act_gang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/act_weicanjia"
                    android:gravity="center"
                    android:text=" / "
                    android:textColor="@color/text_color_gary" />

                <TextView
                    android:id="@+id/act_yicanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/act_gang"
                    android:gravity="center"
                    android:textColor="#2ecc71" />


            </RelativeLayout>
            
    
        
        
    </LinearLayout>
    
    

</ScrollView>
