<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- 上边主页面 -->
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" >
    </FrameLayout>

    <!-- 底部横线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        />

    <!-- 底部菜单页面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <!-- 首页 -->
        <LinearLayout
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:onClick="clickMenu"
            >
            <ImageView
                android:id="@+id/iv_menu_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/zhuye"/>

            />
        </LinearLayout>
        <!-- 活动发布 -->
        <LinearLayout
            android:id="@+id/menu_fabu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:onClick="clickMenu"
            >
            <ImageView
                android:id="@+id/iv_menu_fabu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/fabu"
                android:contentDescription="@string/app_name"/>

        </LinearLayout>
        <!-- 个人中心 -->
        <LinearLayout
            android:id="@+id/menu_self"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:onClick="clickMenu"
            >
            <ImageView
                android:id="@+id/iv_menu_self"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/self"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
