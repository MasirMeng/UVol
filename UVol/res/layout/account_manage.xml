<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray" >
    
    //标题栏
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/blue"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="账号管理"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="25dip"
            />

    </RelativeLayout>
    
    <RelativeLayout
             android:id="@+id/bianji_ziliao"
	         android:layout_width="match_parent"
	         android:layout_height="90dip"
	         android:orientation="horizontal"
	         android:paddingLeft="10dip"
	         android:layout_marginTop="20dp"
	         android:clickable="true"
	         android:background="@drawable/list_pattern">

	          <ImageView
	              android:id="@+id/ziliao_photo"
	              android:layout_width="65dip"
	              android:layout_height="65dip"
	              android:layout_alignParentLeft="true"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="10dp" />

	          <TextView
	              android:id="@+id/ziliao_name"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="90dp"
	              android:layout_centerVertical="true"
	              android:background="@null"
	              android:gravity="center"
	              android:maxLines="1"
	              android:singleLine="true"
	              android:textColor="@color/text_color_gary"
	              android:textSize="20sp" />

	</RelativeLayout>
	      
    <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
    
    <RelativeLayout
             android:id="@+id/xiaoxi_tongzhi"
	         android:layout_width="match_parent"
	         android:layout_height="60dip"
	         android:orientation="horizontal"
	         android:paddingLeft="10dip"
	         android:layout_marginTop="20dp"
	         android:clickable="true"
	         android:background="@drawable/list_pattern">

	          <ImageView
	              android:layout_width="38dip"
	              android:layout_height="38dip"
	              android:layout_alignParentLeft="true"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="15dp"
	              android:src="@drawable/xiaoxi_zhongxin" />

	          <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="65dp"
	              android:layout_centerVertical="true"
	              android:background="@null"
	              android:gravity="center"
	              android:maxLines="1"
	              android:singleLine="true"
	              android:text="消息通知"
	              android:textColor="@color/text_color_gary"
	              android:textSize="18sp" />

	</RelativeLayout>
	
     <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
	
    <RelativeLayout
             android:id="@+id/renzhen_guanli"
	         android:layout_width="match_parent"
	         android:layout_height="60dip"
	         android:orientation="horizontal"
	         android:paddingLeft="10dip"
	         android:clickable="true"
	         android:background="@drawable/list_pattern">

	          <ImageView
	              android:layout_width="30dip"
	              android:layout_height="30dip"
	              android:layout_alignParentLeft="true"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="19dp"
	              android:src="@drawable/renzhen" />

	          <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="65dp"
	              android:background="@null"
	              android:gravity="center"
	              android:maxLines="1"
	              android:singleLine="true"
	              android:text="认证管理"
	              android:textColor="@color/text_color_gary"
	              android:textSize="18sp" />

	</RelativeLayout>
	
    <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
    
    <RelativeLayout
             android:id="@+id/tuichu"
	         android:layout_width="match_parent"
	         android:layout_height="60dip"
	         android:orientation="horizontal"
	         android:paddingLeft="10dip"
	         android:layout_marginTop="20dp"
	         android:clickable="true"
	         android:background="@drawable/list_pattern">

	          <ImageView
	              android:layout_width="30dip"
	              android:layout_height="30dip"
	              android:layout_alignParentLeft="true"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="20dp"
	              android:src="@drawable/shezhi"/>

	          <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="65dp"
	              android:background="@null"
	              android:gravity="center"
	              android:maxLines="1"
	              android:singleLine="true"
	              android:text="退出账号"
	              android:textColor="@color/text_color_gary"
	              android:textSize="18sp" />

	</RelativeLayout>
	
    <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
	
    
    

</LinearLayout>
