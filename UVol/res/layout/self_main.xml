<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        //标题栏
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/blue"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="25dip"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zuzhi_bg"
            android:gravity="bottom"
            android:orientation="vertical" >

            //顶部头像区
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon"
                android:layout_marginTop="15dip"
                    android:layout_width="95dp"
                    android:layout_height="95dp"/>

                <TextView
                    android:id="@+id/id_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_margin="2dip" />
                <TextView
                    android:id="@+id/id_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gary"
                    android:textSize="15sp"
                    android:layout_margin="5dip"/>
            </LinearLayout>
        </LinearLayout>

        //志愿时长区
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            //志愿时长
            <LinearLayout android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="12dp"
                >
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="志愿时长"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/service_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:textColor="@color/temp"
                    android:textSize="20sp" />

            </LinearLayout>


            //我的收藏
            <LinearLayout 
                android:id="@+id/my_shoucang"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="12dp">


                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/shoucang_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:textColor="@color/temp"
                    android:textSize="20sp" />
            </LinearLayout>


            //志愿等级
            <LinearLayout android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="12dp">


                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="志愿等级"
                    android:gravity="center_horizontal"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"
                    android:background="@drawable/dengji" />

            </LinearLayout>
        </LinearLayout>

        //资料修改区

        <LinearLayout
            android:id="@+id/alter_info"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="10dip"
            android:background="@drawable/bg_donation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:text="  账号管理"
                android:textSize="22dp"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/ziliao"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_archer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        //我的活动区

        <LinearLayout
            android:id="@+id/alter_activity"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="10dip"
            android:background="@drawable/bg_donation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView android:layout_width="0dip"
                android:layout_weight="1.0"
                android:layout_height="40dp"
                android:textSize="22dp"
                android:gravity="left|center_vertical"
                android:text="  我的活动"
                android:drawableLeft="@drawable/huodong"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_archer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        //我的组织
        <LinearLayout
            android:id="@+id/alter_chitang"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="10dip"
            android:background="@drawable/bg_donation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView android:layout_width="0dip"
                android:layout_weight="1.0"
                android:layout_height="40dp"
                android:textSize="22dp"
                android:gravity="left|center_vertical"
                android:text="  我的组织"
                android:drawableLeft="@drawable/chitang"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_archer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
        //荣誉榜
        <LinearLayout
            android:id="@+id/alter_rongyu"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="10dip"
            android:background="@drawable/bg_donation_item"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView android:layout_width="0dip"
                android:layout_weight="1.0"
                android:layout_height="40dp"
                android:textSize="22dp"
                android:gravity="left|center_vertical"
                android:text="  荣誉榜"
                android:drawableLeft="@drawable/rongyu"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_archer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>



    </LinearLayout>



</ScrollView>