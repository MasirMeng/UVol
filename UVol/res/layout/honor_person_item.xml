<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal"
              android:paddingLeft="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/xz"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:src="@drawable/xunzhang"/>

            <TextView
                 android:id="@+id/bianhao"
                android:layout_width="33dp"
                android:layout_height="33dp"
                 android:layout_centerInParent="true"
                android:gravity="center"
                android:text="12"
                android:textSize="15sp"/>

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="53dip"
                android:layout_height="53dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:src="@drawable/tx" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NANA"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/person_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="热爱生活，热爱志愿"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_gary" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/zhiyuan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textColor="#6aa84f"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 时"
                    android:layout_gravity="center_vertical"
                    android:textColor="#6aa84f"
                    android:textSize="18sp"/>

            </LinearLayout>



        </LinearLayout>






    </LinearLayout>



</LinearLayout>