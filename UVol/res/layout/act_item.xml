<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:id="@+id/v_act_detail"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_act_pic"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ph1" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >
        
            //活动名称
    <TextView
        android:id="@+id/tv_actName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="爱心辅导"/>

    //时间
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="6dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/time" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:singleLine="true"
            android:paddingLeft="8dp"
            android:textColor="@color/temp"
            android:text="开始: 2016/11/16 07:00  结束: 2016/11/16 15:30 sgarhgwtzht"/>

    </LinearLayout>

    //地点
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="6dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/didian" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:singleLine="true"
            android:paddingLeft="8dp"
            android:textColor="@color/temp"
            android:text="地点: 四川成都双流县文星镇光明小区 "/>

    </LinearLayout>

    //类型
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="5dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/fenlei" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:textColor="#2ecc71"
            android:text="儿童 爱心支教 "
            android:layout_weight="0.84" />




    </LinearLayout>
        
            
            
        </LinearLayout>

    
        
        
    </LinearLayout>

    


</LinearLayout> 
