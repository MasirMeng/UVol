<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //标题栏
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/blue"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="编辑资料"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="25dip"
                />

        </RelativeLayout>
        
        //修改头像
        <RelativeLayout
             android:id="@+id/tx_xiugai"
	         android:layout_width="match_parent"
	         android:layout_height="90dip"
	         android:orientation="horizontal"
	         android:paddingLeft="10dip"
	         android:layout_marginTop="20dp"
	         android:clickable="true"
	         android:background="@drawable/list_pattern">


	          <ImageView
	              android:id="@+id/ziliao_photo"
	              android:layout_width="65dip"
	              android:layout_height="65dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="40dp"
	              android:src="@drawable/tx" />

	          <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_alignParentLeft="true"
	              android:layout_centerVertical="true"
	              android:layout_marginLeft="10dp"
	              android:background="@null"
	              android:gravity="center"
	              android:maxLines="1"
	              android:singleLine="true"
	              android:text="头像"	              
	              android:textSize="18sp" />
	          
	         <ImageView
	              android:layout_width="22dip"
	              android:layout_height="22dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="5dp"
	              android:src="@drawable/enter" />


	  </RelativeLayout>
	  
      <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
      
      //昵称
       <RelativeLayout
              android:id="@+id/personal_name"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/list_pattern"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="昵称"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_username"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentRight="true"
                  android:clickable="true"
                  android:layout_marginRight="40dp"
                  android:text="NANA"
                   android:maxEms="8"  
                  android:singleLine="true"  
                  android:ellipsize="end" 
                  android:textSize="18sp"
                  android:textColor="@color/other_gray" />
              
              <ImageView
	              android:layout_width="22dip"
	              android:layout_height="22dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="5dp"
	              android:src="@drawable/enter" />
              

          </RelativeLayout>
      
       <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
       

       
       //性别

       <RelativeLayout
           android:id="@+id/personal_sex"
           android:layout_width="match_parent"
           android:layout_height="50dip"
           android:background="@drawable/list_pattern"
           android:clickable="true"
           android:orientation="horizontal"
           android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="性别"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/person_sex"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentRight="true"
                  android:clickable="true"
                  android:layout_marginRight="40dp"
                  android:text="女"
                  android:textSize="18sp"
                  android:textColor="@color/other_gray" />
              
               <ImageView
	              android:layout_width="22dip"
	              android:layout_height="22dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="5dp"
	              android:src="@drawable/enter" />
                            
          </RelativeLayout>
          
       
       <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
       
       //联系方式
       <RelativeLayout
              android:id="@+id/phoneNumber"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/list_pattern"
              android:layout_marginTop="20dp"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="联系方式"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_phone"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentRight="true"
                  android:clickable="true"
                  android:layout_marginRight="40dp"
                  android:text="13575915389"
                  android:textSize="18sp"
                  android:textColor="@color/other_gray" />
              
               <ImageView
	              android:layout_width="22dip"
	              android:layout_height="22dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="5dp"
	              android:src="@drawable/enter" />
                            
          </RelativeLayout>
       
              <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />
       
       //简介
       <RelativeLayout
              android:id="@+id/jianjie"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:background="@drawable/list_pattern"
              android:layout_marginTop="20dp"
              android:clickable="true"
              android:orientation="horizontal"
              android:paddingLeft="10dip" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp"
                  android:background="@null"
                  android:gravity="center"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:text="简介"
                  android:textSize="18sp" />

              <TextView
                  android:id="@+id/personal_jianjie"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentRight="true"
                  android:clickable="true"
                  android:layout_marginRight="40dp"
                  android:text="爱生活，爱志愿"
                  android:maxEms="5"  
                  android:singleLine="true"  
                  android:ellipsize="end"  
                  android:textSize="18sp"
                  android:textColor="@color/other_gray" />
              
               <ImageView
	              android:layout_width="22dip"
	              android:layout_height="22dip"
	              android:layout_alignParentRight="true"
	              android:layout_centerVertical="true"
	              android:layout_marginRight="5dp"
	              android:src="@drawable/enter" />
                            
          </RelativeLayout>
          
         <View
	       android:layout_height="1px"
	       android:layout_width="match_parent"
	       android:layout_marginLeft="10dip"
	       android:layout_marginRight="10dip"
	       android:background="#ffdad7cf" />



    </LinearLayout>


</ScrollView>