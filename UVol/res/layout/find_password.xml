<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    //标题栏
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/blue"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="25dip"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_contentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/text_color_gary"
        android:text="@string/find_userpass"
        android:background="@color/white"/>
    
    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="50dip"
		        android:orientation="horizontal"
		        android:paddingLeft="30dip"
		        android:background="#FFFFFFFF">
		        <ImageView
		            android:layout_height="30dp"
		            android:layout_width="30dp"
		            android:src="@drawable/email"
		            android:layout_gravity="center_vertical"/>
		        <EditText
		            android:id="@+id/find_email"
		            android:layout_height="wrap_content"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_marginLeft="12dip"
		            android:textColor="#FF2F2F2F"
		            android:textSize="15sp"
		            android:textColorHint="#FF999898"
		            android:layout_gravity="center_vertical"
		            android:background="@null"
		            android:singleLine="true"
		            android:maxLines="1"
		            android:hint="请输入邮箱"
		            android:inputType="textEmailAddress" />
		
		    </LinearLayout>
    
 
   <Button
	        android:id="@+id/ack_email"
	        android:layout_width="match_parent"
	        android:layout_height="45dip"
	        android:layout_margin="10dp"
	        android:background="@drawable/btn_shape1"
	        android:text="确认"
	        android:textColor="@color/white"
	        android:textSize="25dp" />

</LinearLayout>
